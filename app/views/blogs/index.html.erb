<p id="notice"><%= notice %></p>

<h1>Listing Blogs</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Publish</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><%= blog.publish %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Share' ,share_blog_path(blog), {:remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true, 'data-toggle' =>  "modal" } %>
      </tr>
    <% end %>
    <div id="popup" class="modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
