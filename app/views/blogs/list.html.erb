
<h1>Recent Ten Blogs</h1>
<% unless @blogs.blank? %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Author</th>
        <th>Blog title</th>
        <th colspan="4" ></th>
      </tr>
    </thead>

    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.user.email %>
          <td><%= blog.title %></td>
          <td><%= link_to 'Show', blog %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%else%>
  <h3 align="center"> No Public Blog</h3>
<%end%>
<br>
