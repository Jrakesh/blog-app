
<h1>Shared Blogs</h1>
<% unless @blogs.blank? %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Author</th>
        <th>Blog Title</th>
        <th colspan="4" ></th>
      </tr>
    </thead>
  	<% @blogs.each do |blog| %>
     	<tbody>
	      <% if blog.shares.map(&:user_id).include?(current_user.id) %>
	        <tr>
	          <td><%= blog.user.email %>
	          <td><%= blog.title %></td>
	          <td><%= link_to 'Show', blog %></td>
	        </tr>
	      <% end %>
    	</tbody>
    <% end %>	
  </table>
<%else%>
  <h3 align="center"> No Public Blog</h3>
<%end%>
<br>